<h1>Users</h1>
<%= link_to 'Add User', new_user_path, :class => 'btn btn-sm btn-primary' %>
<br />
<br />
<div class="well well-lg">
    <ul class="list-group">
    <% @users.each do |user| %>
        <li class="list-group-item">
          <span class="col-md-4"><%= user.full_name%></span>
          <%= link_to 'Edit', edit_user_path(user.id), :class => 'btn btn-sm btn-info' %>
          <%= link_to 'Delete', user, :method => 'delete', :class => 'btn btn-sm btn-danger', :style => 'display: inline-block;' %>
        </li>
    <% end %>
    </ul>
</div>